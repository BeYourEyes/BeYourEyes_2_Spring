<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/gray_50">

<com.dna.beyoureyes.ui.common.CustomToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="@string/result_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


<ImageView
    android:id="@+id/imageView5"
    android:importantForAccessibility="no"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:background="@drawable/ic_camera_fail_error_80"
    app:layout_constraintBottom_toTopOf="@+id/cautionMainText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints" />

<TextView
    android:id="@+id/cautionMainText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/wanted_sans_bold"
    android:text="@string/camera_fail_main_text"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/nextBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"

    app:layout_constraintTop_toBottomOf="@+id/toolbar">

</TextView>

    <TextView
        android:id="@+id/cautionSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/wanted_sans_semi_bold"
        android:text="@string/camera_fail_sub_text"
        android:textAlignment="center"
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cautionMainText">

    </TextView>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/nextBtn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/shape_button_b500_24"
    android:text="@string/okaybutton"
    android:fontFamily="@font/wanted_sans_bold"
    android:textSize="14sp"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
